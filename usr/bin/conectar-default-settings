#!/bin/bash

# gksu pida pass del alumno
gconftool-2 -t bool -s /apps/gksu/sudo-mode 1

# extensiones
dconf write /org/gnome/shell/enabled-extensions "['alternate-tab@gnome-shell-extensions.gcampax.github.com', 'alternative-status-menu@gnome-shell-extensions.gcampax.github.com', 'axemenu@wheezy', 'panel-docklet@quina.at', 'quitbutton@azathoth92.hotmail.it', 'remove-workspaces-sidebar@jancborchardt.net']"

#favoritos del dash
dconf write /org/gnome/shell/favorite-apps "['nautilus.desktop','firefox.desktop','gimp.desktop','audacity.desktop','vlc.desktop','cheese.desktop','libreoffice-startcenter.desktop','gnome-terminal.desktop']"

#mostrar icono de mi computadora
dconf write /org/gnome/nautilus/desktop/computer-icon-visible 0

# mostrar papelera
dconf write /org/gnome/nautilus/desktop/trash-icon-visible 1
dconf write /org/gnome/nautilus/desktop/trash-icon-name "Papelera"

#mostrar icon home
dconf write /org/gnome/nautilus/desktop/home-icon-visible 1
dconf write /org/gnome/nautilus/desktop/home-icon-name "Carpeta Personal"

# mostrar dispositivos montados en el desktop
dconf write /org/gnome/nautilus/desktop/volumen-visible 1

# se puede cambiar los keybindings
dconf write /org/gnome/desktop/interface/can-change-accels 1

#nautilus captura el desktop en gnome shell
dconf write /org/gnome/desktop/background/draw-background 1
dconf write /org/gnome/desktop/background/show-desktop-icons 1

# screensaver sin password de bloqueo
dconf write /org/gnome/desktop/screensaver/lock-enabled 0
