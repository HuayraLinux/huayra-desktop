  #$CONF_CMD --type float /apps/panel/applets/applet_1/position 802
  #$CONF_CMD --type string /apps/panel/applets/applet_2/applet_iid "NotificationAreaAppletFactory::NotificationArea"
  #$CONF_CMD --type float /apps/panel/applets/applet_2/position 928
  #$CONF_CMD --type bool /apps/panel/applets/clock_screen0/locked 1
  #$CONF_CMD --type float /apps/panel/applets/applet_2/position 440
  #$CONF_CMD --type string /apps/panel/applets/window_menu_screen0/tooltip "Huayra Men√∫"
  
  exit 0

fi

