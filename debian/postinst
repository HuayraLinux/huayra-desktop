#! /bin/sh
set -e

#write_cache()
#{
#if [ -x /usr/bin/gtk-update-icon-cache-3.0 ]; then
#    if ! gtk-update-icon-cache-3.0 --force --quiet /usr/share/icons/gnome; then
#        echo "WARNING: icon cache generation failed"
#    fi
#fi
