if [ "$1" = "triggered" ]; then
    SIZES=$(ls /usr/share/icons/gnome/*/places | sed -rn 's,^.*/([0-9]+)x[0-9]+/.*$,\1,p')

    update-alternatives --install /usr/share/icons/huayra/scalable/axemenu/start-here.svg start-here.svg /usr/share/icons/huayra/scalable/axemenu/start-here.svg 10

    update-alternatives --slave /usr/share/icons/gnome/$SIZE/places/start-here.png start-here.png /usr/share/icons/huayra/axemenu/$SIZEx/axemenu.png

    #write_cache
    exit 0
fi

if [ "$1" = "configure" ]; then
  dconf update

  if ! dpkg-statoverride --list --quiet "/var/www" >/dev/null; 
  then
      dpkg-statoverride --force --quiet --update \
          --add alumno www-data 0775 "/var/www"
  fi

fi

#DEBHELPER#
